generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── ENUMS ──────────────────────────────────────────

enum UserRole {
  OWNER
  ADMIN
  MEMBER
  CLIENT
}

enum Platform {
  SHOPIFY
  CARTPANDA
  YAMPI
  NUVEMSHOP
  FACEBOOK_ADS
  GOOGLE_ADS
  REPORTANA
}

enum IntegrationStatus {
  CONNECTED
  DISCONNECTED
  ERROR
  PENDING
}

enum SyncStatus {
  IDLE
  SYNCING
  SUCCESS
  FAILED
}

// ─── AUTH.JS REQUIRED MODELS ────────────────────────

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  hashedPassword String?
  image          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts    Account[]
  sessions    Session[]
  memberships Membership[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ─── MULTI-TENANCY ─────────────────────────────────

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  logo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships     Membership[]
  integrations    Integration[]
  orders          Order[]
  adMetrics       AdMetric[]
  syncLogs        SyncLog[]
  reportanaEvents ReportanaEvent[]
  storeFunnels    StoreFunnel[]
  reportClients   ReportClient[]
  whatsAppSession WhatsAppSession?

  @@map("organizations")
}

model Membership {
  id             String   @id @default(cuid())
  role           UserRole @default(CLIENT)
  userId         String
  organizationId String
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@map("memberships")
}

// ─── INTEGRATIONS ──────────────────────────────────

model Integration {
  id             String            @id @default(cuid())
  platform       Platform
  status         IntegrationStatus @default(PENDING)
  organizationId String

  // Credentials (encrypted at rest)
  accessToken  String? @db.Text
  refreshToken String? @db.Text
  apiKey       String? @db.Text
  apiSecret    String? @db.Text
  tokenExpiresAt DateTime?

  // Platform-specific identifiers
  externalStoreId   String?
  externalAccountId String?

  // Metadata
  scopes    String?
  metadata  Json?

  lastSyncAt DateTime?
  syncStatus SyncStatus @default(IDLE)
  errorMessage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, platform])
  @@map("integrations")
}

// ─── SYNCED DATA ───────────────────────────────────

model Order {
  id              String   @id @default(cuid())
  organizationId  String
  platform        Platform
  externalOrderId String
  status          String
  customerName    String?
  customerEmail   String?
  totalAmount     Decimal  @db.Decimal(10, 2)
  currency        String   @default("BRL")
  itemCount       Int      @default(0)
  orderDate       DateTime
  rawData         Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, platform, externalOrderId])
  @@index([organizationId, orderDate])
  @@index([organizationId, platform])
  @@map("orders")
}

model AdMetric {
  id             String   @id @default(cuid())
  organizationId String
  platform       Platform
  campaignId     String?
  campaignName   String?
  adSetId        String?
  adSetName      String?
  adId           String?
  adName         String?
  thumbnailUrl   String?
  date           DateTime @db.Date
  impressions    Int      @default(0)
  reach          Int      @default(0)
  clicks         Int      @default(0)
  spend          Decimal  @db.Decimal(10, 2) @default(0)
  conversions    Int      @default(0)
  addToCart      Int      @default(0)
  initiateCheckout Int    @default(0)
  revenue        Decimal  @db.Decimal(10, 2) @default(0)
  currency       String   @default("BRL")
  rawData        Json?
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, platform, campaignId, adId, date])
  @@index([organizationId, date])
  @@index([organizationId, platform])
  @@map("ad_metrics")
}

model SyncLog {
  id             String     @id @default(cuid())
  organizationId String
  platform       Platform
  status         SyncStatus
  recordsSynced  Int        @default(0)
  errorMessage   String?    @db.Text
  startedAt      DateTime   @default(now())
  completedAt    DateTime?

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, platform])
  @@map("sync_logs")
}

// ─── REPORTANA WEBHOOK DATA ───────────────────────

model ReportanaEvent {
  id             String   @id @default(cuid())
  organizationId String
  eventType      String   // "abandoned_checkout" or "checkout_recovered"
  referenceId    String
  customerName   String?
  customerEmail  String?
  customerPhone  String?
  totalPrice     Decimal  @db.Decimal(10, 2)
  currency       String   @default("BRL")
  lineItems      Json?
  rawData        Json?
  eventDate      DateTime
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, eventType, referenceId])
  @@index([organizationId, eventType])
  @@index([organizationId, eventDate])
  @@map("reportana_events")
}

// ─── STORE FUNNEL METRICS ────────────────────────────

model StoreFunnel {
  id                 String   @id @default(cuid())
  organizationId     String
  platform           Platform
  date               DateTime @db.Date
  sessions           Int      @default(0)
  addToCart           Int      @default(0)
  checkoutsInitiated Int      @default(0)
  ordersGenerated    Int      @default(0)
  createdAt          DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, platform, date])
  @@index([organizationId, date])
  @@map("store_funnels")
}

// ─── REPORTS & WHATSAPP ────────────────────────────

enum PlanType {
  FORMULA_BASE
  FORMULA_AVANCADA
  FORMULA_TOTAL
  PERSONALIZADO
}

enum ClientStatus {
  ACTIVE
  PAUSED
  CANCELLED
}

enum ReportFrequency {
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
}

model ReportClient {
  id             String       @id @default(cuid())
  organizationId String
  name           String
  responsible    String
  phone          String
  plan           PlanType
  status         ClientStatus @default(ACTIVE)
  startDate      DateTime
  groupName      String?
  groupId        String?
  notes          String?      @db.Text
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  reports        ReportLog[]
  schedules      ReportSchedule[]

  @@map("report_clients")
}

model WhatsAppSession {
  id             String   @id @default(cuid())
  organizationId String   @unique
  sessionId      String   // Internal session identifier
  creds          String   @db.Text
  status         String   @default("DISCONNECTED") // CONNECTED, DISCONNECTED
  qr             String?  @db.Text
  me             String?  // The connected phone number
  pushName       String?  // The WhatsApp Name
  updatedAt      DateTime @updatedAt

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("whatsapp_sessions")
}

model ReportSchedule {
  id             String          @id @default(cuid())
  clientId       String
  frequency      ReportFrequency
  cronExpression String?         // Optional if we use strict frequency enums
  time           String          // HH:mm
  dayOfWeek      Int?            // 0-6 for Weekly
  dayOfMonth     Int?            // 1-31 for Monthly
  config         Json
  isActive       Boolean         @default(true)
  lastRun        DateTime?
  nextRun        DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  client         ReportClient    @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("report_schedules")
}

model ReportLog {
  id        String   @id @default(cuid())
  clientId  String
  type      String   // MANUAL, SCHEDULED
  status    String   // SUCCESS, FAILED, PENDING
  metrics   Json
  sentAt    DateTime @default(now())
  error     String?

  client    ReportClient @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("report_logs")
}
